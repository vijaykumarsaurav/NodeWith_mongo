  </form> -->


  <form action="/quotes" method="POST">
    <div class="imgcontainer">
      <img src="http://icons.iconarchive.com/icons/paomedia/small-n-flat/1024/profile-icon.png" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <label><b>Your Name</b></label>
      <input type="text" placeholder="Enter Username" name="name" required>

      <label><b>Your Stuff</b></label>
      <input type="text" placeholder="Enter Text" name="psw" required>

      <button type="submit">Submit</button>
      <input type="checkbox" checked="checked"> Check This
    </div>

    <div class="container" style="background-color:#f1f1f1">
